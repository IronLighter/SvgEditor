<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="100"
             x:Class="sample4.Controls.TopMenu">
	<StackPanel Orientation="Horizontal" Spacing="15" Margin="30 0 0 0">
		<Button Content="Создать новый" Click="CreateNewButton_Click" MinWidth="130" HorizontalContentAlignment="Center" FontSize="16"/>
		<Button MinWidth="130" HorizontalContentAlignment="Center" FontSize="16"> Сохранить</Button>
		<Button Content="Сохранить файл" Click="SaveFileButton_Click" MinWidth="130" HorizontalContentAlignment="Center" FontSize="16"/>
		<Button Content="Загрузить файл" Click="LoadFileButton_Click" MinWidth="130" HorizontalContentAlignment="Center" FontSize="16"/>
	</StackPanel>
</UserControl>
